@model PracticaAnimales.Animal;

<form action="/Animal/Modificar" method="post"  >
    <input type="hidden" name="IdAnimal" value="@Model.IdAnimal" />
	 <div>
        Nombre:
        <input type="text" name="NombreEspecie" value="@Model.NombreEspecie" />
    </div>
    <div>
        Peso:
        <input type="number" name="PesoPromedio" value="@Model.PesoPromedio" />
    </div>
    <div>
        Edad:
        <input type="number" name="EdadPromedio" value="@Model.EdadPromedio" />
    </div>

	<div>
		Tipo Animal:
		<select name="IdTipoAnimal">
			<option value="">Tipo Animal</option>
			@foreach (var tipoAnimal in (List<PracticaAnimales.TipoAnimal>) ViewBag.TipoAnimal)
				{
					<option value="@tipoAnimal.IdTipoAnimal">@tipoAnimal.Nombre</option>
				}
		</select>
	</div>

	<div>
        <input type="submit" value="Guardar" />
    </div>

</form>
